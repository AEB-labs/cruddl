"A supehero"
type Hero @rootEntity(quickSearchIndex:true, globalQuickSearch: true) {
    "The hero's screen name"
    name: String @unique @quickSearchIndex(language:DE)
    age: Int @defaultValue(value: 42)
    nickNames: [String] @quickSearchIndex
    movies: [Movie] @relation(inverseOf: "heroes")
    skills: [Skill]
    skill: Skill @quickSearchIndex(searchable: true)
    suit: Suit @quickSearchIndex(searchable: true)
    morality: Morality @quickSearchIndex(searchable: true) # @MSF VAL TODO: only allow language on Scalars and Enums
    countryISOCode: String @quickSearchIndex
    country: Country @reference(keyField: "countryISOCode")
    missions: [Mission] @quickSearchIndex(searchable: true)
    info: JSON
}

"A heroic mission"
type Mission @childEntity {
    date: DateTime
    title: String @quickSearchIndex(searchable: true)
}

"A special skill of a superhero"
type Skill @valueObject {
    description: String @quickSearchIndex(searchable: true)
    "A value between 0 and 11"
    strength: Float
    skills: [Skill] @quickSearchIndex
}

"A superhero movie"
type Movie @rootEntity(quickSearchIndex:true, globalQuickSearch: true) {
    name: String @quickSearchIndex(searchable: true, language:EN)
    "All the heroes starring in this movie"
    heroes: [Hero] @relation # @MSF VAL TODO: do not allow quickSearchIndex for relations
    "The real superhero"
    director: Director @relation
    publisher: Publisher @reference # @MSF VAL TODO: do not allow quickSearchIndex for references
}

"A movie director"
type Director @rootEntity {
    name: String
    movies: [Movie] @relation(inverseOf: "director")
}

"A description of a hero suit"
type Suit @entityExtension {
    "The dominant color of the suit"
    color: String @quickSearchIndex(searchable: true)
}

type Country @rootEntity {
    isoCode: String @key
    name: String
}

type Publisher @rootEntity {
    identCode: String @key
    name: String
}

enum Morality {
    GOOD
    EVIL
}

type Delivery @namespace(name: "logistics.delivery") @rootEntity {
    name: String
}
